<div id="post-index" style= "margin: 0 492px; padding: 0 300px;">  
  <% users.each do |user| %>
		<div class="card my-4" style="width: 25rem;">
			<div class="card-body">
				<div class="content_align"> 
					<%= image_tag user.avatar, {height: 55, width: 55} %>
		    	<p id="follow">
		    		<%= render "/relationships/follow", user: user if user.id != session[:user_id]%>
		    	</p>
		    </div>
		    <h5 class="card-title"><%= user.user_name %></h5>
			    <p class="card-text"><%= user.email %>
			    </p>
		    <div class="followlist">
			    <p>Followers </p>
			    <P>Following </p>
			  </div>
			  <div class="followlist">
			    <p><%= user.passive_relationships.count%></p>
			    <p>
			     <%= user.active_relationships.count %>
			    </p>
		  	</div>
		  </div>
		</div>
  <% end %>
</div>