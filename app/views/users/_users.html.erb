<div id="post-index" class="main-content user-content">  
  <% users.each do |user| %>
		<div class="card my-2" style="width: 35rem;">
			<div class="card-body">
				<div class="content_align"> 
					<%= image_tag user.avatar, {height: 55, width: 55} %>
		    	<p id="follow">
		    		<%= render "/relationships/follow", user: user%>
		    	</p>
		    </div>
		    <h5 class="card-title"><%= user.user_name %></h5>
			    <p class="card-text"><%= user.email %>
			    </p>
		    <div class="followlist">
			    <p>Followers </p>
			    <P>Following </p>
			    <p>Posts</p>
			  </div>
			  <div class="followlist">
			    <p><%= user.passive_relationships.count%></p>
			    <p>
			     <%= user.active_relationships.count %>
			    </p>
			    <p>
			     <%= user.posts.count %>
			    </p>
		  	</div>
		  </div>
		</div>
  <% end %>  
</div>