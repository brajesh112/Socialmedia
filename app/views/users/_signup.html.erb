<div class="container">
	<div class="d-flex justify-content-center">
		<%= form_for User.new, url: users_path(), method: :post, :remote => true,multipart:true do |f| %>
			<div class="field">
				<%= f.label :user_name, class: "label_color" %>
				<%= f.text_field :user_name, class: "form-control" %>
			</div>
			<div class="field">
				<%= f.label :password, class: "label_color" %>
				<%= f.password_field :password,class: "form-control" %>
			</div>
			<div class="field">
				<%= f.label :email, class: "label_color" %>
				<%= f.email_field :email,class: "form-control" %>
			</div>
			<div class="field">
				<%= f.label :avatar, class: "label_color" %>
				<%= f.file_field :avatar,class: "form-control" %>
			</div>
			<div class="field">
				<%= f.submit "signup", id:"post-submit" ,class: "btn btn-primary btn-lg btn-block"%> 
		  </div>
		<% end %>
	</div>
</div>