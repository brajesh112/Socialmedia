<div>	
	<% if comment.likes.where(user_id: session[:user_id]).present? %>
		<%= link_to "<i class='fa-solid fa-heart like_icon'></i>".html_safe, likes_path(comment_id: comment), method: :post , :remote=> true %>
	<% else %> 
		<%= link_to "<i class='fa-regular fa-heart like_icon'></i>".html_safe, likes_path(comment_id: comment), method: :post , :remote=> true %>
	<% end %>
	<%= comment.likes.count %>
</div>
